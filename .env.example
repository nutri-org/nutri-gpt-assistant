# JWT Secret for token signing/verification
JWT_SECRET=dev-secret

# Stripe webhook signing secret (set when billing/webhooks are enabled)
STRIPE_SIGNING_SECRET=whsec_xxx

# CORS allow‑list: comma‑separated origins. Example:
# CORS_ORIGIN=https://app.example.com,https://admin.example.com
# Notes:
#  - Browser requests from origins not in this list will be blocked by CORS.
#  - Requests without an Origin header (tests, curl, webhooks) are allowed.
CORS_ORIGIN=

# Rate limiting (defaults are safe for tests/dev)
RATE_LIMIT_CHAT_WINDOW_MS=60000
RATE_LIMIT_CHAT_MAX=25
RATE_LIMIT_UPLOAD_WINDOW_MS=60000
RATE_LIMIT_UPLOAD_MAX=10
# If behind a proxy and you need accurate client IPs, enable trust proxy later:
# RATE_LIMIT_TRUST_PROXY=false

