
{
  "root": true,
  "env": {
    "es2024": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:jest/recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [
    {
      "files": ["tests/**/*.js", "**/*.test.js"],
      "env": { "jest": true }
    }
  ],
  "rules": {
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "node/no-unsupported-features/es-syntax": "off"
  }
}
